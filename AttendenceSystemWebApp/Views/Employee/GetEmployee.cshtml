@model IEnumerable<AttendenceSystemWebApp.Models.ApplicationUser>

@{
    ViewBag.Title = "GetEmployee";
}
<style>
    input {
        border-radius: 5px;
    }

    label {
        font-weight: bold;
        color: darkslategray;
    }
</style>
<button type="button" class="btn btn-lg btn-block" style="margin-top: 3%; margin-bottom: 3%;background-color:darkslategrey;color:azure;font-weight:bold">Employee Dashboard</button>
<br />
<br />

@using (Html.BeginForm("GetEmployee", "Employee", FormMethod.Get))
{
    <div class="row">


        <div class="col-md-6">
            <div class="col-md-12">

                @Html.Label("Showroom", new { @class = "" })
                @Html.DropDownList("EId", new SelectList(ViewBag.Entity, "EID", "eName"), "--Entity--", new { @class = "form-control col-md-12", @style = "font-size:large;font-weight:;color:black;background-color: white;" })


            </div>

        </div>
        <div class="col-md-6">
            <div class="col-md-12">
                @Html.Label("Department", new { @class = "" })
                @Html.DropDownList("Department", new SelectList(ViewBag.Dept, "DeptId", "DeptNm"), "--Department--", new { @class = "form-control col-md-12", @style = "font-size:large;font-weight:;color:black;background-color: white;" })
            </div>

        </div>


    </div>
    <br />
    <div class="row">
        <div class="col-md-6">

        </div>
        <div class="col-md-6">
            <div align="right" class="form-group col-md-12">
                <div style="">

                    <input type="submit" class="btn btn-primary col-md-4" value="Search" />

                </div>
            </div>
        </div>


    </div>

}

<br />
<br />

<p>
    <a href="/Account/Register" class="btn btn-primary">Add Employee</a>
</p>
<table class="table table-dark row-border hover stripe" id="myTable">
    <thead style="color:azure">
        <tr>
            <th>
                Employee Code
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>

            <th>
                Name
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.DOB)
            </th>
            @*<th>
                    @Html.DisplayNameFor(model => model.Sex)
                </th>*@
            <th>
                @Html.DisplayNameFor(model => model.DeptId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DesignationId)
            </th>


            <th>
                @Html.DisplayNameFor(model => model.SuprvisorId)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody style="color:darkslategray;font-weight:bold">
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>

                <td>
                    @item.FirstName @item.LastName
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.DOB)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Dept.DeptNm)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Designation.Desg)
                </td>


                <td>
                    @Html.DisplayFor(modelItem => item.SuprvisorId)
                </td>

                <td>
                    <a class="" style="color:darkolivegreen" href="/Employee/EditEmployee/@item.Id"><i class="fas fa-edit"></i></a>
                    <a class="" style="color:darkcyan" href="/Employee/Details/@item.Id"><i class="fas fa-info-circle"></i></a>
                    @*<a href="/Employee/Delete/@item.Id" style="color:red" class=""><i class="fas fa-trash-alt"></i></a>*@
                </td>
            </tr>
        }
    </tbody>




</table>

